<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>

            <item>
                <rotate
                    android:fromDegrees="45"
                    android:pivotX="-40%"
                    android:pivotY="87%"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <size
                            android:width="8dp"
                            android:height="8dp"/>
                        <solid android:color="@android:color/secondary_text_light"/>
                    </shape>
                </rotate>
            </item>

        </layer-list>
    </item>

    <item>
        <layer-list>

            <item>
                <rotate
                    android:fromDegrees="45"
                    android:pivotX="-40%"
                    android:pivotY="87%"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <size
                            android:width="8dp"
                            android:height="8dp"/>
                        <solid android:color="@android:color/secondary_text_dark"/>
                    </shape>
                </rotate>
            </item>

        </layer-list>
    </item>
</selector>
